@using LodgeActivityTracker.Helpers
@using LodgeActivityTracker.Models

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LodgeActivityTracker</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LodgeActivityTracker.styles.css" asp-append-version="true" />

    <style>
        #qrBox {
            position: fixed;
            bottom: 70px;
            right: 20px;
            z-index: 1000;
            background: white;
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 0.5rem;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            width: max-content;
            display: none;
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.3s ease, transform 0.3s ease;
        }

        #qrBox.show {
            display: block;
            opacity: 1;
            transform: translateY(0);
        }

        #qrBox img {
            width: 120px;
            max-width: 40vw;
            border-radius: 10px;
        }

        #qrToggle {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1100;
        }
    </style>
</head>

<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-4">
        <div class="container-fluid">

            <a class="navbar-brand fw-bold d-flex align-items-center"
               asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.png" class="me-2" style="height:40px;">
                LodgeActivityTracker
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Activities" asp-action="Index">Activities</a>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Create">Add Activity</a>
                        </li>
                    }

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Admin Login</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">
                                Register User / Guest
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-link nav-link">Logout</button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted py-3 mt-5">
    <div class="container text-center">
        &copy; @DateTime.Now.Year - LodgeActivityTracker
    </div>
</footer>

@{
    var path = Context.Request.Path.Value ?? "";
    string qrCodeImage = "";
    string currentUrl = "";

    bool isPublicPage =
        !path.StartsWith("/Admin") &&
        !path.StartsWith("/Account") &&
        !path.Contains("Dashboard");

    if (isPublicPage)
    {
        var host = Context.Request.Host.Host;
        var port = Context.Request.Host.Port;

        if (host == "localhost")
        {
            currentUrl = $"http://192.168.1.154:{port}{path}";
        }
        else
        {
            currentUrl = $"{Context.Request.Scheme}://{Context.Request.Host}{path}";
        }

        qrCodeImage = QRCodeHelper.GenerateQRCodeBase64(currentUrl);
    }
}

@if (!string.IsNullOrEmpty(qrCodeImage))
{
    <div id="qrToggle">
        <button class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-qr-code"></i>
        </button>
    </div>

    <div id="qrBox">
        <a href="@currentUrl" target="_blank">
            <img src="@qrCodeImage" />
        </a>
        <p class="small mt-1 mb-1">Scan or click to open</p>
        <button class="btn btn-sm btn-outline-primary" id="copyUrlBtn">
            Copy URL
        </button>
    </div>
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $("#qrToggle button").click(() => $("#qrBox").toggleClass("show"));
    $("#copyUrlBtn").click(() => navigator.clipboard.writeText("@currentUrl"));
</script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
