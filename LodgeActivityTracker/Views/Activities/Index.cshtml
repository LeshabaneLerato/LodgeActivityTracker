@using System.Linq
@model IEnumerable<LodgeActivityTracker.Models.Activity>

<h2>Lodge Activities</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Activity</a>

@if (Model == null || !Model.Any())
{
    <p class="text-muted">No activities found.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ActivityName</td>
                    <td>@item.Description</td>
                    <td>@item.Date.ToString("yyyy-MM-dd")</td>
                    <td>@item.Status</td>
                </tr>
            }
        </tbody>
    </table>
}
