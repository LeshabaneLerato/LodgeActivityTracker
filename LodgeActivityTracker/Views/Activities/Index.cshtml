@model IEnumerable<LodgeActivityTracker.Models.Activity>

<h2>Lodge Activities</h2>

<a asp-action="Create" class="btn btn-primary mb-3">
    Add New Activity
</a>

<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Date</th>
        <th>Status</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ActivityName</td>
            <td>@item.Description</td>
            <td>@item.ActivityDate.ToShortDateString()</td>
            <td>@item.Status</td>
        </tr>
    }
</table>
