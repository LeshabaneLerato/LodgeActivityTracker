@model List<LodgeActivityTracker.Models.Activity>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4">Admin Dashboard</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Date</th>
            <th>Status</th>
            <th style="width:260px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model)
        {
            <tr>
                <td>@activity.Date.ToShortDateString()</td>

                <td>
                    <span class="badge
                            @(activity.Status == "Approved" ? "bg-success" :
                                                    activity.Status == "Rejected" ? "bg-danger" : "bg-warning text-dark")">
                    @activity.Status
                </span>
            </td>

                <td>
                @if (activity.Status == "Pending")
                    {
                        <form asp-controller="Admin"
                              asp-action="Approve"
                              method="post"
                              class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@activity.Id" />
                            <button type="submit" class="btn btn-success btn-sm">
                                Approve
                            </button>
                        </form>

                        <form asp-controller="Admin"
                              asp-action="Reject"
                              method="post"
                              class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@activity.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                Reject
                            </button>
                        </form>
                    }
                    else
                    {
                        <a asp-controller="Admin"
                           asp-action="Edit"
                           asp-route-id="@activity.Id"
                           class="btn btn-warning btn-sm">
                            Edit
                        </a>

                        <a asp-controller="Admin"
                           asp-action="Delete"
                           asp-route-id="@activity.Id"
                           class="btn btn-outline-danger btn-sm">
                            Delete
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
