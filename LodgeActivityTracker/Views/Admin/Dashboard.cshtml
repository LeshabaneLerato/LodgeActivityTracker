@model LodgeActivityTracker.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4">Admin Dashboard</h2>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary shadow">
            <div class="card-body text-center">
                <h5>Total Activities</h5>
                <h2>@Model?.TotalActivities</h2>
            </div>
        </div>
    </div>
</div>

<div class="card shadow">
    <div class="card-header bg-dark text-white">
        Recent Activities
    </div>
    <div class="card-body p-0">
        @if (Model?.RecentActivities != null && Model.RecentActivities.Any())
        {
            <table class="table table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var activity in Model.RecentActivities)
                    {
                        <tr>
                            <td>@activity.ActivityName</td>
                            <td>@activity.Date.ToString("yyyy-MM-dd")</td>
                            <td>
                                <span class="badge bg-secondary">
                                    @activity.Status
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="p-3 text-muted text-center">
                No activities found.
            </div>
        }
    </div>
</div>
