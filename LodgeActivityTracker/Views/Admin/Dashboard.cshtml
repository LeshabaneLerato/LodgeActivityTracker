@model LodgeActivityTracker.Models.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-3">Admin Dashboard</h2>

<div class="row mb-4">
    <div class="col-md-3"><strong>Total:</strong> @Model.TotalActivities</div>
    <div class="col-md-3 text-warning"><strong>Pending:</strong> @Model.PendingCount</div>
    <div class="col-md-3 text-success"><strong>Approved:</strong> @Model.ApprovedCount</div>
    <div class="col-md-3 text-danger"><strong>Rejected:</strong> @Model.RejectedCount</div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model.RecentActivities)
        {
            <tr>
                
                <td>@activity.Date.ToShortDateString()</td>
                <td>@activity.Status</td>
                <td>
                    @if (activity.Status == "Pending")
                    {
                        <form asp-action="Approve" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@activity.Id" />
                            <button class="btn btn-success btn-sm">Approve</button>
                        </form>

                        <form asp-action="Reject" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@activity.Id" />
                            <button class="btn btn-danger btn-sm">Reject</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
